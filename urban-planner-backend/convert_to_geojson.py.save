import geopandas as gpd
import os

shp_path = "data/Geopackage/Copy of bayarea_cities_with_codes.shp"
geojson_path = "data/Geopackage/bayarea_cities_with_codes.geojson"

if not os.path.exists(shp_path):
    raise FileNotFoundError(f"Không tìm thấy file: {shp_path}")

print("📂 Đang đọc shapefile...")
gdf = gpd.read_file(shp_path)

print("💾 Đang ghi ra GeoJSON...")
gdf.to_file(geojson_path, driver="GeoJSON")

print(f"✅ Đã tạo file GeoJSON tại: {geojson_path}")


